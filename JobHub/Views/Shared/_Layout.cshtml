<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
    <link href="~/css/style.css" rel="stylesheet">
    <title>@ViewBag.Title - Job Hub</title>
    <style>
        body {
            font-family: "Sofia", sans-serif;
        }

        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30"><path stroke="rgba(0, 0, 0, 0.5)" stroke-width="2" linecap="round" stroke-miterlimit="10" d="M4 7h22M4 15h22M4 23h22"/></svg>');
        }
    </style>
</head>
<body>
    <header id="main-header">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <a class="navbar-brand" href="/">
                <img src="~/images/JobHub.webp" alt="Brand Logo" width="100" height="80">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Create" asp-controller="Company" aria-label="Add a New Company">Register a Company</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Company" aria-label="View Company Directory">Company Directory</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <!-- Authentication Links -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Logout" asp-controller="Account"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Login" asp-controller="Account"><i class="fas fa-sign-in-alt"></i> Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Register" asp-controller="Account"><i class="fas fa-user-plus"></i> Register Account</a>
                        </li>
                    }

                    <!-- Job Seeker Dropdown - Positioned at the very right -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="JobSeekerDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="Job Seeker Options">
                            Job Seeker
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="JobSeekerDropdown">
                            <a class="dropdown-item" asp-action="Create" asp-controller="JobSeeker" aria-label="Register as a Job Seeker">Register as a Job Seeker</a>
                            <a class="dropdown-item" asp-action="Index" asp-controller="JobSeeker" aria-label="Browse Job Seeker Profiles">Browse Profiles</a>
                            <a class="dropdown-item" asp-action="LoginJobSeeker" asp-controller="Account" aria-label="Job Seeker Login">Job Seeker Login</a>
                            <a class="dropdown-item" asp-action="RegisterJobSeeker" asp-controller="Account" aria-label="Job Seeker Registration">Register Account</a>
                            <a class="dropdown-item" href="https://joinhandshake.com/" target="_blank" rel="noopener noreferrer" aria-label="Explore Opportunities on Handshake">Explore Opportunities</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <section id="site-stats">
        <div class="container text-center">
            <h3>JOBHUB </h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-6">
                            <div class="stats-box">
                                <i class="fa fa-user-o"></i><span><small>100k +</small></span>
                                <p>Job Seekers</p>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="stats-box">
                                <i class="fa fa-slideshare"></i><span><small>500 +</small></span>
                                <p>Employers</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-6">
                            <div class="stats-box">
                                <i class="fa fa-hand-peace-o"></i><span><small>10k +</small></span>
                                <p>Active Jobs</p>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="stats-box">
                                <i class="fa fa-building-o"></i><span><small>400 +</small></span>
                                <p>Companies</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--------------App Banner------------>

    <section id="app-banner" class="text-center">
        <h1>Find Jobs On Mobile, Download JobHub App</h1>
        <img src="~/images/app-store.png">
        <img src="~/images/play-store.png">
    </section>

    <!---------------footer---------->
    <section id="footer" class="text-center">
    <img src="~/images/job-logo-black.png" class="footer-image">
    <p>😮‍💨 Tired of checking every day for new Jobs? 😩<br> Subscribe for email updats</p>
    <a href="#"><img src="~/images/twitter-icon.png"></a>
    <a href="#"><img src="~/images/facebook-icon.png"></a>
    <a href="#"><img src="~/images/whatsapp-icon.png"></a>
    <a href="#"><img src="~/images/linkedin-icon.png"></a>
    <hr>
    <p>Made With <i class="fa fa-heart"></i> by <a href=https://www.linkedin.com/in/yingfagao008>Joe Gao</a></p>
        <button type="button" class="AboutUS"><a href=http://localhost:5148/Home/Index>About Us</a></button>
        <button type="button" class="LogIn"><a href=http://localhost:5148/Account/LoginJobSeeker>User Log in</a></button>

    </section>


        <div>
        @RenderSection("Scripts", required: false)
        @RenderSection("JobHubSection", required: false)
    </div>
</body>
</html>


